{% import "_macro/ui.njk" as ui %}
<header class="relative">
    <div class="relative flex items-start justify-center">
        <div class="text-center">
            <div class="relative inline-block">
                <h1
                    class="title-font text-[2.2rem] sm:text-[2.55rem] md:text-[3.1rem] leading-[1.18] tracking-wide text-slate-900">
                    <a href="{{ url_for('/') }}">{{ config.title }}</a>
                </h1>
                <!-- Seal: Mathematically Centered -->
                <div
                    class="absolute left-full top-1/2 -translate-y-1/2 ml-1 sm:ml-4 origin-left scale-75 sm:scale-110">
                    {{ ui.seal() }}
                </div>
            </div>
            <p class="mt-3 text-sm sm:text-[0.95rem] leading-relaxed text-slate-500">
                {{ config.subtitle }}
            </p>
        </div>
    </div>
</header>

<!-- Navigation -->
<nav class="mt-8 md:mt-10" aria-label="{{ __('menu.menu') }}">
    <!-- Mobile Toggle -->
    <div class="flex items-center justify-center md:hidden">
        <button id="menuBtn"
            class="focus-elegant inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white/60 px-4 py-2 text-sm text-slate-700 shadow-sm backdrop-blur-sm"
            aria-expanded="false" aria-controls="mobileMenu">
            <span class="font-serif text-base leading-none tracking-widest">{{ __('menu.menu') }}</span>
            <span class="text-slate-400 hidden md:inline" aria-hidden="true">/</span>
            <span class="num text-xs tracking-wide hidden md:inline">{{ __('menu.menu') }}</span>
            {{ ui.icon_chevron_down() }}
        </button>
    </div>

    <!-- Desktop Menu -->
    <div class="hidden md:block">
        <ul class="flex items-center justify-center gap-6 text-base text-slate-700">
            {% for name, path in theme.menu %}
            <li><a class="focus-elegant rounded-md px-2 py-1 hover:text-slate-900 transition-colors"
                    href="{{ url_for(path) }}">{{ __('menu.' + name) if __("menu." + name) != "menu." + name else name }}</a></li>
            {% if not loop.last %}
            <li class="text-slate-300 select-none" aria-hidden="true">/</li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>

    <!-- Mobile Menu Panel -->
    <div id="mobileMenu" class="menu-panel md:hidden mt-4" data-open="false">
        <ul
            class="mx-auto max-w-sm rounded-2xl border border-slate-200 bg-white/70 backdrop-blur-sm shadow-sm overflow-hidden">
            {% for name, path in theme.menu %}
            <li><a class="focus-elegant block px-6 py-3 text-center text-slate-800 hover:bg-slate-50/80 transition-colors"
                    href="{{ url_for(path) }}">{{ __('menu.' + name) if __("menu." + name) != "menu." + name else name }}</a></li>
            {% if not loop.last %}
            <li class="h-px bg-slate-200/70" aria-hidden="true"></li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>
</nav>
