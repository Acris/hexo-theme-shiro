{% extends "_layout.njk" %}

{% block content %}
<section class="max-w-3xl mx-auto">
    <header class="text-center mb-10">
        <h1 class="font-bold text-[1.8rem] sm:text-[2rem] md:text-[2.2rem] leading-snug text-slate-900">
            {% if page.year and is_archive() %}
            {{ __('nav.archives') }}: {{ page.year }}
            {% else %}
            {{ __('nav.archives') }}
            {% endif %}
        </h1>
        {{ ui.divider() }}
    </header>

    {% import "_macro/archive.njk" as archive with context %}
    {% import "_macro/ui.njk" as ui %}

    {% set posts = page.posts.sort('date', -1) %}

    {% if posts.length > 0 %}
        {{ archive.render_list(posts) }}
    {% else %}
        {% include "_partial/common/empty.njk" %}
    {% endif %}

    {% include "_partial/common/pagination.njk" %}
</section>
{% endblock %}
